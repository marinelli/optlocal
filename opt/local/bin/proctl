#!/bin/sh

EXIT_FAILURE=1
EXIT_SUCCESS=0

SERVICE="/etc/init.d/$2"
COMMAND="$1"

if [ "x" = "x$2" ] ; then
  printf '>>> Syntax: proctl <command> <initscript>\n'
  exit $EXIT_FAILURE
fi

if [ -x "${SERVICE}" ] ; then
  exec "${SERVICE}" "${COMMAND}"
else
  printf '>>> `%sÂ´ not found\n' "${SERVICE}"
  exit $EXIT_FAILURE
fi

exit $EXIT_SUCCESS

